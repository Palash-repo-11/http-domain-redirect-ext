{
    "manifest_version": 3,
    "version": "1.0.1",
    "name": "Http domain checker",
    "description": "http domain auto modify",
    "background": {
        "service_worker": "background.js"
    },
    
    "icons": {
        "128": "download.png",
        "48": "download.png"
    },
    "options_page": "option.html",
    
    
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "declarativeNetRequestWithHostAccess",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}